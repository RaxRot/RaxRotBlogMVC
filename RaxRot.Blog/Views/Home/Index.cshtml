
@model RaxRot.Blog.Models.ViewModels.HomeViewModel;


@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">

    <div class="row align-items-center g-5 p-5">

        <div class="col-12 col-lg-6">

            <h1 class="display-5 fw-bold lh-1 mb-3">
                RaxRot Blog - The Dev Blog
            </h1>
            <p class="lead">
                RaxRot is a blog about IT,covering topics like C#,Unity,.Net,etc.
                Want to read the latest articles? Join us and get blogs in your email.
            </p>

        </div>
        <div class="col-12 col-lg-6">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS0Z8XqW5zTLN1ITXOrC6Hb42wreROwR2gizA&usqp=CAU" alt="DevImg"
                 class="d-block mx-lg-auto img-fluid" />
        </div>

    </div>

</div>

<div class="container">
    <div class="row justify-content-center">

        <div class="col-6 d-flex">

            @if(Model!=null && Model.Tags.Any())
            {
                foreach(var tag in Model.Tags)
                {
                    <span class="badge bg-dark me-1">
                        @tag.Name
                    </span>
                }
            }

        </div>

    </div>
</div>

<div class="container">

    <div class="row justify-content-center">

        <div class="col-6">

            @if (Model != null && Model.BlogPosts.Any())
            {
                foreach(var blogPost in Model.BlogPosts)
                {
                    <div class="mb-5 p-5 bg-light box-shadow">

                        <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading"
                             class="d-block img-fluid mb-2" style="max-width: 550px; max-height: 450px; height: auto; width: auto;" />

                       <h2 class="mb-4">@blogPost.Heading</h2>
                       <p class="mb-4">
                           Author : @blogPost.Author
                           <br />
                           Published Date : @blogPost.PublishedDate.ToShortDateString();
                       </p>
                       <p class="mb-4">
                            @foreach(var tag in blogPost.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </p>

                       <p class="mb-4">
                            @blogPost.ShortDescription
                       </p>

                       <a class="btn btn-dark" asp-area="" 
                       asp-controller="Blogs"
                       asp-action="Index"
                       asp-route-urlHandle="@blogPost.UrlHandle">
                       Read More</a>


                        </div>
                }
            }

        </div>

    </div>

</div>