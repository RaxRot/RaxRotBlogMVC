@model RaxRot.Blog.Models.ViewModels.DeleteBlogPostRequest;

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Delete BlogPosts - Admin Functionality</h1>
    </div>
</div>

@if (Model != null)
{
    <form method="post">

        <div class="container py-5">

            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" id="heading" asp-for="Id" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Heading</label>
                <input type="text" class="form-control" id="heading" asp-for="Heading" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Page Title</label>
                <input type="text" class="form-control" id="pageTitle" asp-for="PageTitle" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Content</label>
                <textarea class="form-control" id="content" asp-for="Content" readonly></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Short Description</label>
                <input type="text" class="form-control" id="shortDescription" asp-for="ShortDescription" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Featured Image URL</label>
                <input type="text" class="form-control" id="featuredImageUrl" asp-for="FeaturedImageUrl" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">URL Handle</label>
                <input type="text" class="form-control" id="urlHandle" asp-for="UrlHandle" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Published Date</label>
                <input type="date" class="form-control" id="publishedDate" asp-for="PublishedDate" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Author</label>
                <input type="text" class="form-control" id="author" asp-for="Author" readonly />
            </div>

            <div class="mb-3">
                <button type="submit" class=" btn btn-dark">Delete</button>
            </div>

        </div>

    </form>

}
else
{
    <p>No to delete</p>
}


